{
  // ============================================================================
  // CORE EDITOR SETTINGS
  // ============================================================================
  // Workspace & Session Management
  "restore_on_startup": "last_workspace",
  "auto_update": false,
  "load_direnv": "direct",
  // File Management
  "autosave": {
    "after_delay": {
      "milliseconds": 5000
    }
  },
  "ensure_final_newline_on_save": true,
  "remove_trailing_whitespace_on_save": true,
  "close_on_file_delete": true,
  // ============================================================================
  // VISUAL APPEARANCE & THEMING
  // ============================================================================
  // Theme & Color Scheme
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Catppuccin Macchiato"
  },
  "icon_theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Macchiato"
  },
  // Font Configuration
  "buffer_font_family": "Moralerspace Xenon NF",
  "buffer_font_features": {
    "calt": true,
    "liga": true,
    "ss02": true,
    "ss03": true,
    "ss04": true,
    "ss05": true,
    "zero": true
  },
  "ui_font_family": "Moralerspace Neon NF",
  // ============================================================================
  // EDITOR INTERFACE & LAYOUT
  // ============================================================================
  // Pane & Window Management
  "active_pane_modifiers": {
    "border_size": 0,
    "inactive_opacity": 0.8
  },
  "scroll_beyond_last_line": "one_page",
  "bottom_dock_layout": "contained",
  // Tab Configuration
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true,
    "activate_on_close": "left_neighbour",
    "show_close_button": "hover",
    "show_diagnostics": "errors"
  },
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": true,
    "enable_preview_from_code_navigation": false
  },
  // Toolbar & UI Elements
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "title_bar": {
    "show_branch_icon": true,
    "show_branch_name": true,
    "show_project_items": true,
    "show_onboarding_banner": false,
    "show_user_picture": false,
    "show_sign_in": true,
    "show_menus": true
  },
  // ============================================================================
  // EDITOR BEHAVIOR & INTERACTION
  // ============================================================================
  // Cursor & Selection
  "cursor_blink": true,
  "cursor_shape": "block",
  "multi_cursor_modifier": "alt",
  "current_line_highlight": "all",
  "selection_highlight": true,
  // Mouse & Input Behavior
  "hide_mouse": "on_typing",
  "autoscroll_on_clicks": true,
  "drag_and_drop_selection": {
    "enabled": true,
    "delay": 200
  },
  // Text Editing Features
  "use_autoclose": true,
  "always_treat_brackets_as_autoclosed": false,
  "preferred_line_length": 80,
  "soft_wrap": "none",
  "show_wrap_guides": true,
  "tab_size": 2,
  "hard_tabs": false,
  // Text Display
  "show_whitespaces": "boundary",
  "unnecessary_code_fade": 0.5,
  "line_indicator_format": "short",
  // ============================================================================
  // VISUAL GUIDES & NAVIGATION AIDS
  // ============================================================================
  // Scrollbar Configuration
  "scrollbar": {
    "show": "always",
    "cursors": false,
    "git_diff": true,
    "search_results": true,
    "selected_text": true,
    "selected_symbol": false,
    "diagnostics": "warning",
    "axes": {
      "horizontal": false,
      "vertical": true
    }
  },
  // Minimap
  "minimap": {
    "show": "always",
    "thumb": "always",
    "thumb_border": "left_only"
  },
  // Indent Guides
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 2,
    "background_coloring": "disabled",
    "coloring": "indent_aware"
  },
  // ============================================================================
  // CODE INTELLIGENCE & LSP
  // ============================================================================
  // Language Server Protocol
  "enable_language_server": true,
  "lsp_highlight_debounce": 60,
  "lsp": {
    "eslint": {
      "settings": {
        "codeActionOnSave": {
          "rules": [
            "import/order"
          ]
        }
      }
    }
  },
  // Code Actions & Formatting
  "format_on_save": "on",
  "formatter": [
    {
      "language_server": {}
    },
    {
      "code_actions": {
        "source.formatDocument": true,
        "source.fixAll.eslint": true,
        "source.organizeImports": true
      }
    }
  ],
  "inline_code_actions": true,
  // Completions & Suggestions
  "completions": {
    "words": "fallback",
    "lsp": true,
    "lsp_fetch_timeout_ms": 100,
    "lsp_insert_mode": "insert"
  },
  "show_completions_on_input": true,
  "show_completion_documentation": true,
  "snippet_sort_order": "inline",
  // Hover & Help
  "hover_popover_enabled": true,
  "hover_popover_delay": 200,
  // Inlay Hints
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": false,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "show_background": false,
    "edit_debounce_ms": 500,
    "scroll_debounce_ms": 50,
    "toggle_on_modifiers_press": {
      "control": true,
      "shift": true,
      "alt": true,
      "platform": true,
      "function": true
    }
  },
  // ============================================================================
  // DIAGNOSTICS & ERROR HANDLING
  // ============================================================================
  "diagnostics": {
    "button": true,
    "include_warnings": true,
    "lsp_pull_diagnostics": {
      "enabled": true,
      "debounce_ms": 50
    },
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 3,
      "min_column": 0,
      "max_severity": "warning"
    }
  },
  // ============================================================================
  // SEARCH & NAVIGATION
  // ============================================================================
  // Search Configuration
  "search": {
    "whole_word": false,
    "case_sensitive": false,
    "include_ignored": false,
    "regex": true,
    "button": false
  },
  "seed_search_query_from_cursor": "always",
  "use_smartcase_search": true,
  // File Finder
  "file_finder": {
    "file_icons": true,
    "modal_max_width": "small",
    "git_status": true,
    "skip_focus_for_active_in_search": true,
    "include_ignored": true
  },
  // ============================================================================
  // FILE SYSTEM & PROJECT MANAGEMENT
  // ============================================================================
  // File Type Associations
  "file_types": {
    "JSONC": [
      "**/.zed/**/*.json",
      "**/zed/**/*.json",
      "**/Zed/**/*.json",
      "**/.vscode/**/*.json",
      "**/.editorconfig"
    ],
    "Shell Script": [
      ".env.*",
      ".dev.vars*"
    ]
  },
  // File Scanning
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/.jj",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings"
  ],
  "file_scan_inclusions": [
    ".env*",
    ".dev.vars*"
  ],
  // ============================================================================
  // VERSION CONTROL (GIT)
  // ============================================================================
  "git": {
    "git_gutter": "tracked_files",
    "gutter_debounce": 100,
    "inline_blame": {
      "enabled": true,
      "min_column": 80,
      "delay_ms": 100
    },
    "hunk_style": "unstaged_hollow"
  },
  // ============================================================================
  // LANGUAGE-SPECIFIC SETTINGS
  // ============================================================================
  "languages": {
    "TypeScript": {
      "code_actions_on_format": {
        "source.organizeImports": true
      },
      "format_on_save": "off"
    },
    "JavaScript": {
      "code_actions_on_format": {
        "source.organizeImports": true
      },
      "format_on_save": "off"
    },
    "TSX": {
      "code_actions_on_format": {
        "source.organizeImports": true
      },
      "format_on_save": "off"
    },
    "Haskell": {
      "indent_guides": {
        "enabled": true,
        "background_coloring": "indent_aware",
        "coloring": "disabled"
      }
    },
    "Python": {
      "indent_guides": {
        "enabled": true,
        "background_coloring": "indent_aware",
        "coloring": "disabled"
      }
    }
  },
  // ============================================================================
  // EXTENSIONS & PLUGINS
  // ============================================================================
  "auto_install_extensions": {
    "c": true,
    "docker-compose": true,
    "dockerfile": true,
    "haskell": true,
    "html": true,
    "java": false,
    "javascript": true,
    "typescript": true,
    "python": true,
    "swift": true
  },
  // ============================================================================
  // PANELS & DOCK CONFIGURATION
  // ============================================================================
  // Project Panel
  "project_panel": {
    "button": true,
    "default_width": 240,
    "dock": "left",
    "entry_spacing": "standard",
    "git_status": true,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true,
    "indent_size": 16,
    "indent_guides": {
      "show": "always"
    },
    "scrollbar": {
      "show": "auto"
    }
  },
  // Outline Panel
  "outline_panel": {
    "button": true,
    "default_width": 240,
    "dock": "right",
    "file_icons": true,
    "folder_icons": true,
    "indent_guides": {
      "show": "always"
    },
    "scrollbar": {
      "show": "never"
    }
  },
  // Chat & Collaboration Panels
  "chat_panel": {
    "button": "never"
  },
  "collaboration_panel": {
    "button": false,
    "default_width": 360,
    "dock": "left"
  },
  "notification_panel": {
    "button": false,
    "dock": "right",
    "default_width": 380
  },
  // ============================================================================
  // AI & PREDICTIONS
  // ============================================================================
  // Edit Predictions
  "edit_predictions": {
    "disabled_globs": [
      "**/.env*",
      "**/.dev.vars",
      "**/*.key",
      "**/*.cart",
      "**/*.lock",
      "**/*.crt",
      "**/secrets.yml"
    ],
    "enabled_in_text_threads": false,
    "mode": "subtle"
  },
  "edit_predictions_disabled_in": [
    "comment",
    "string"
  ],
  "show_edit_predictions": true,
  "features": {
    "edit_prediction_provider": "copilot"
  },
  // ============================================================================
  // AI AGENT & ASSISTANCE
  // ============================================================================
  "agent": {
    "always_allow_tool_actions": true,
    "button": true,
    "default_profile": "write",
    "default_view": "text_thread",
    "dock": "right",
    "enabled": true,
    "expand_edit_card": true,
    "expand_terminal_card": true,
    "play_sound_when_agent_done": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "inline_assistant_model": {
      "provider": "google",
      "model": "gemini-2.5-flash"
    },
    "commit_message_model": {
      "provider": "google",
      "model": "gemini-2.5-flash"
    },
    "thread_summary_model": {
      "provider": "google",
      "model": "gemini-2.5-flash"
    }
  },
  "language_models": {
    "ollama": {
      "api_url": "http://localhost:11434"
    }
  },
  // ============================================================================
  // DEVELOPMENT TOOLS
  // ============================================================================
  // Debugger
  "debugger": {
    "dock": "bottom",
    "button": true,
    "stepping_granularity": "line",
    "save_breakpoints": true
  },
  // Journal
  "journal": {
    "path": "~/Library/Mobile Documents/iCloud~md~obsidian/Documents",
    "hour_format": "hour24"
  },
  // ============================================================================
  // TERMINAL CONFIGURATION
  // ============================================================================
  "terminal": {
    "alternate_scroll": "off",
    "blinking": "terminal_controlled",
    "copy_on_select": false,
    "keep_selection_on_copy": true,
    "dock": "bottom",
    "default_width": 640,
    "default_height": 320,
    "detect_venv": {
      "on": {
        "directories": [
          ".env",
          "env",
          ".venv",
          "venv"
        ],
        "activate_script": "default"
      }
    },
    "env": {},
    "font_family": "Moralerspace Krypton NF",
    "font_features": {
      "regture": true
    },
    "font_size": 13,
    "line_height": "standard",
    "option_as_meta": true,
    "button": true,
    "shell": "system",
    "toolbar": {
      "breadcrumbs": false
    },
    "working_directory": "current_project_directory",
    "scrollbar": {
      "show": "never"
    },
    "cursor_shape": "bar"
  },
  // ============================================================================
  // COLLABORATION & COMMUNICATION
  // ============================================================================
  "calls": {
    "mute_on_join": true,
    "share_on_join": false
  },
  "show_call_status_icon": true,
  // ============================================================================
  // PRIVACY & TELEMETRY
  // ============================================================================
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  // ============================================================================
  // INPUT & ACCESSIBILITY
  // ============================================================================
  "vim_mode": true,
  "relative_line_numbers": true,
  "vim": {
    "use_system_clipboard": "always",
    "use_smartcase_find": true,
    "cursor_shape": {
      "normal": "block",
      "replace": "underline",
      "visual": "hollow",
      "insert": "bar"
    }
  }
}
